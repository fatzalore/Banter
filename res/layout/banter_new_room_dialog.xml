<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/new_room_dialog_room_name"
            android:hint="Room name"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" android:singleLine="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_room_dialog_password"
            android:layout_gravity="center_horizontal"
            android:hint="Password"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" android:singleLine="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_room_dialog_repeat_password"
            android:layout_gravity="center_horizontal"
            android:hint="Repeat password"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" android:singleLine="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_room_dialog_admin_password"
            android:layout_gravity="center_horizontal"
            android:hint="Admin password"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" android:singleLine="true"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/new_room_dialog_repeat_admin_password"
            android:layout_gravity="center_horizontal"
            android:hint="Repeat admin password"
            android:paddingLeft="10dp"
            android:paddingTop="10dp" android:paddingBottom="10dp" android:singleLine="true"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ab_bottom_solid_banter" android:paddingTop="0dp">
        <ImageButton
                android:id="@+id/new_room_dialog_no"
                android:src="@drawable/ic_action_remove"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                />
        <ImageButton
                    android:id="@+id/new_room_dialog_yes"
                    android:src="@drawable/ic_action_done"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.25"/>

    </LinearLayout>
</LinearLayout>